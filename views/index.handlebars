<div class="row">
  <div class="col-md-4">
    <h3 class="submit">Available Burgers</h3>
    <div id="availableBurgers">
      {{#each burgers}}
      {{#unless devoured}}
      <form action="burger/eat/{{id}}" method="POST">
        <div class="input-group">
          <li class="form-control">{{id}}. {{burger_name}}</li>
          <span class="input-group-btn">
            <button class="btn btn-dark devour-button" type="submit">Devour It!</button>
          </span>
        </div>
      </form>
      {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="col-md-4">
    <div class="jumbotron text-center bg-dark text-white" style="background-image: url(https://i.ytimg.com/vi/aDtIVJPoDPA/maxresdefault.jpg);
    background-size: 100%;">
      <h1 class="display-4" id="title">Burgerlicious 
      </h1>
    </div>
    <div class="card border border-dark">
      <div class="card-header bg-dark text-white">
        Eat-Da-Burger!
      </div>
      <div class="card-body">
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" class="form-control" id="burger" placeholder="">
          </div>
          <button class="btn btn-dark" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <h3 class="submitFont">Burgers Devoured</h3>
    <div id="alreadyEaten">
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="input-group">
        <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>