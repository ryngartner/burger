<div class="container">
  <div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4" id="title">Burgerlicious <img src="https://mantisnseamore.files.wordpress.com/2012/02/tastyburger.jpg"</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card border border-primary">
      <div class="card-header bg-primary text-white">
        Eat-Da-Burger!
      </div>
      <div class="card-body">
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Place your order here:</label>
            <input type="text" class="form-control" id="burger" placeholder="">
          </div>
          <button class="btn btn-primary" type="submit">Burger Name</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 mt-4">
    <div class="card border border-primary">
      <div class="card-header bg-primary text-white">
        Burgers
      </div>
      <div class="card-body">
        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{!-- {{> burgers/burger-block devoured=false}} --}}
            <li>
              {{this.burger_name}}
            </li>
          {{/unless}}
        {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="col-md mt-4">
  <div class="card devoured-card">
    <div class="card-header text-white" id="devoured-card-header">
      Devoured Burgers
    </div>
    <div class="card-body">
      {{#each burgers}}
        {{#if devoured}}
          {{!-- {{> burgers/burger-block devoured=true}} --}}
          {{this.burger_name}}
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-12">
    <div class="card footer">
      <div class="card-body footer-body text-white">
        <h5 class="card-title text-white">Burgerlicious</h5>
      </div>
    </div>
  </div>
</div>


